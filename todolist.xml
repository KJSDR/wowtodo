<Ui xmlns="http://www.blizzard.com/ui/">
    <Frame name="ToDoListFrame" parent="UIParent" enableMouse="true" movable="true">
        <Size>
            <Item>
                <Width>300</Width>
                <Height>400</Height>
            </Item>
        </Size>
        <Anchors>
            <Anchor point="CENTER"/>
        </Anchors>
        <Backdrop>
            <Background>
                <Texture file="Interface/Tooltips/UI-Tooltip-Background"/>
            </Background>
            <BackgroundColor>
                <Color r="0" g="0" b="0" a="1"/>
            </BackgroundColor>
        </Backdrop>
        <Scripts>
            <OnMouseDown>
                self:StartMoving()
            </OnMouseDown>
            <OnMouseUp>
                self:StopMovingOrSizing()
            </OnMouseUp>
        </Scripts>
        
        <FontString name="ToDoListTitle" inherits="GameFontNormalLarge" justifyH="CENTER">
            <Anchors>
                <Anchor point="TOP" x="0" y="-10"/>
            </Anchors>
            <Text>To-Do List</Text>
        </FontString>
        
        <!-- Placeholder for task entries -->
        <FontString name="ToDoListTaskPlaceholder" inherits="GameFontNormal" justifyH="LEFT">
            <Anchors>
                <Anchor point="TOPLEFT" x="10" y="-30"/>
            </Anchors>
            <Text/>
        </FontString>
    </Frame>
</Ui>
